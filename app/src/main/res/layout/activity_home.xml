<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        tools:context="myapplication.example.sultan.testing.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/mapimage"
            android:background="@drawable/floorplan1"
            />

        <RelativeLayout
            android:id="@+id/mapinfobar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/infectedview"
            android:background="#BF000000"
            android:padding="10dp">

            <TextView
                android:id="@+id/buildingname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Bourns Hall of Engineering"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buildingname"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:text="900 University Ave.\nRiverside, CA 92521\nTel: (951) 827-1012"
                android:textSize="15sp" />


        </RelativeLayout>
        <!--
                        <View
                            android:id="@+id/bar1"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/mapinfobar"
                            android:background="@android:color/darker_gray" /> -->

        <RelativeLayout
            android:id="@+id/infectedview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/infectedBar"
            android:paddingBottom="15dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/infectedtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/infected"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/infectedcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infectedtitle"
                android:layout_centerHorizontal="true"
                android:text="@string/number_infected"
                android:textSize="50sp" />


        </RelativeLayout>


    </RelativeLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        class="myapplication.example.sultan.testing.NavigationDrawerFragment"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>
